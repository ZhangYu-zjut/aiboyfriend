# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here

# OpenRouter Configuration (替代 OpenAI)
OPENROUTER_API_KEY=your_openrouter_api_key

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Payment Configuration (Creem/Stripe)
CREEM_API_KEY=your_creem_api_key
WEBHOOK_SECRET=your_webhook_secret

# App Configuration
PORT=3000
NODE_ENV=development

# A/B Testing & DOL Configuration
# DOL是AI男友平台专属虚拟货币，用于聊天消费和功能解锁
DEFAULT_DOL_AMOUNT=300
DEFAULT_HET_THRESHOLD=120
AB_TEST_ENABLED=true

# 网络代理配置（可选）
# 如果在中国大陆访问Discord有问题，请配置以下选项之一：
# HTTPS_PROXY=http://127.0.0.1:7890
# HTTP_PROXY=http://127.0.0.1:1080
# ALL_PROXY=socks5://127.0.0.1:1080
